<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="msMAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:msMAUI.Views"
    Shell.FlyoutBehavior="Disabled">
    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate views:MainPage}"
            Icon="homepage"/>

        <ShellContent
            Title="About"
            ContentTemplate="{DataTemplate views:AboutPage}"
            Icon="icon_about1" />

        <ShellContent
            Title="All movies"
            ContentTemplate="{DataTemplate views:AllMoviesPage}"
            Icon="moviereel"/>

        <ShellContent
            Title="Movies"
            ContentTemplate="{DataTemplate views:MoviePage}"
            Icon="play"/>
    </TabBar>


</Shell>
