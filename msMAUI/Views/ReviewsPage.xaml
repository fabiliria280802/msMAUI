<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:msMAUI.ViewModels"
             x:Class="msMAUI.Views.ReviewsPage"
             Title="ReviewsPage">
  <StackLayout>
    <ListView x:Name="reviewsListView"
              HasUnevenRows="True">
      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
            <StackLayout Padding="10">
              <Label Text="Título"
                     FontAttributes="Bold"
                     FontSize="20"/>
              <Label Text="{Binding name}"
                     FontSize="15"/>
              <Label Text="Correo del usuario"
                     FontAttributes="Bold"
                     FontSize="20"/>
              <Label Text="{Binding email}"
                     FontSize="15"/>
              <Label Text="Reseña"
                     FontAttributes="Bold"
                     FontSize="20"/>
              <Label Text="{Binding body}"
                     FontSize="15"/>
            </StackLayout>
          </ViewCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </StackLayout>
</ContentPage>

