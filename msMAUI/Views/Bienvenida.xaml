<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="msMAUI.Views.Bienvenida"
             Title="Bienvenida">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                Source="corncito.png"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Label
                Text="¡Hola! Soy Corncito"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                FontFamily="Arial"
                HorizontalOptions="Center" />

            <Label
                Text="Me encantaría conocerte mucho más"
                SemanticProperties.HeadingLevel="Level1"
                FontFamily="Arial"
                FontSize="18"
                HorizontalOptions="Center" />

            <Entry
               x:Name="nombre"
               Placeholder="¿Cómo te llamas?"
               Grid.Row="1"/>

            <Button Text="Empezar"
                Grid.Row="1"
                Clicked="OnCounterClicked"
                Grid.Column="1"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
