<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="msMAUI.Views.LoginPage"
             Title="LoginPage">
    <VerticalStackLayout>
        <Image Source="" WidthRequest="180" HeightRequest="180"></Image>
        <Entry x:Name="userEntry" Keyboard="Default" Grid.Row="0" Placeholder="Usuario:"/>
        <Entry x:Name="passEntry" IsPassword="True" Keyboard="Numeric" Grid.Row="1" Placeholder="Contraseña:"/>
        <Button Text="Iniciar sesión" Clicked="Button_Clicked" Grid.Row="2"/>
        <Label HorizontalOptions="Center">
            <Label.FormattedText>
                <FormattedString>
                    <Span Text="No tienes una cuenta?" TextColor="White"/>
                    <Span Text="Register" TextColor="White" FontAttributes="Bold" TextDecorations="Underline"/>
                </FormattedString>
            </Label.FormattedText>
        </Label>
    </VerticalStackLayout>
</ContentPage>